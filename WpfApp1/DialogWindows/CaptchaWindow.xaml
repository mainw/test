<Window x:Class="WpfApp1.DialogWindows.CaptchaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.DialogWindows"
        mc:Ignorable="d"
        Title="Диалоговое окно" Height="180" Width="250" WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Image Name="img" Width="200" Height="50"/>
        <StackPanel Name="textPanel">
            <TextBlock Name="helpTextBlock" HorizontalAlignment="Center"/>
            <TextBox Name="responceTextBox" MaxLength="0" />
        </StackPanel>
        <Button Content="Подтвердить" Name="okButton" Click="okButton_Click"/>
    </StackPanel>
</Window>
